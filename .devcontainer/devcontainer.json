{
    "name": "c++ development container",
    "build": {
        "dockerfile": "Dockerfile",
        "args": {
            "USERNAME": "${localEnv:USER}"
        }
    },
    "initializeCommand": "mkdir -p ${localWorkspaceFolder}/persistent_data; mkdir -p ${localWorkspaceFolder}/../persistent_data",
    "runArgs": [
        "--cap-add=SYS_PTRACE",
        "--cap-add=NET_ADMIN",
        "--security-opt",
        "seccomp=unconfined"
    ],
    "mounts": [
        "source=${localWorkspaceFolder}/persistent_data/,target=/home/${localEnv:USER}/persistent_data,type=bind,consistency=cached",
        "source=${localWorkspaceFolder}/../persistent_data,target=/home/${localEnv:USER}/workspace,type=bind,consistency=cached",
        "source=/home/${localEnv:USER}/,target=/home/${localEnv:USER}/host-home,type=bind,consistency=cached,ro=true"
    ],
    "workspaceFolder": "/home/${localEnv:USER}/cpp_dojo",
    "workspaceMount": "source=${localWorkspaceFolder}/cpp_dojo/,target=/home/${localEnv:USER}/cpp_dojo,type=bind,consistency=cached",
    "postCreateCommand": "/bin/sh /home/${localEnv:USER}/scripts/postCreate.sh",
    "extensions": [
        "ms-vscode.cpptools",
        "ms-vscode.cmake-tools",
        "twxs.cmake",
        "xaver.clang-format",
        "mhutchie.git-graph",
        "hbenl.vscode-test-explorer",
        "matepek.vscode-catch2-test-adapter"
    ],
    "settings": {
        "terminal.integrated.copyOnSelection": true,
        "terminal.integrated.shell.linux": "/bin/bash",
        "terminal.integrated.shellArgs.linux": [
            "-l"
        ],
        "cmake.configureOnEdit": false,
        "cmake.parallelJobs": 8,
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "xaver.clang-format",
        "clang-format.executable": "clang-format",
        "editor.rulers": [
            100
        ],
        "files.trimFinalNewlines": true,
        "files.insertFinalNewline": true,
        "launch": {
            "configurations": [
                {
                    "name": "Select and Debug",
                    "type": "cppdbg",
                    "request": "launch",
                    "program": "${command:cmake.launchTargetPath}",
                    "args": [],
                    "cwd": "${workspaceFolder}",
                    "MIMode": "gdb",
                    "externalConsole": false,
                    "setupCommands": [
                        {
                            "description": "Enable pretty-printing for gdb",
                            "text": "-enable-pretty-printing",
                            "ignoreFailures": true
                        }
                    ]
                },
                {
                    "name": "Attach to process",
                    "type": "cppdbg",
                    "request": "attach",
                    "pid": "${command:pickMyProcess}"
                }
            ],
            "compounds": []
        }
    },
}